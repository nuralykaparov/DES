<div class="container">

  <div class="row">

    <div class="col-lg-3">
      <div class="list-group">
        <a href="/" class="list-group-item"> Home</a>
        {{#if_eq user.userRoleId 2}}
          <a href="/user/archieve" class="list-group-item active">E-archive list</a>
          <a href="/user/inboxDocs" class="list-group-item">Inbox Docs</a>
          <a href="/user/myDocs" class="list-group-item"> My documents</a>
          <a href="/user/createDocsView" class="list-group-item">Upload Document</a>
        {{/if_eq}}

        {{#if_eq user.userRoleId 1}}
          <a href="/user/archieve" class="list-group-item">E-archive list</a>
          <a href="/user/createUser" class="list-group-item">Create User</a>
          <a href="/user/myDocs" class="list-group-item active"> My documents</a>
          <a href="/user/createDocsView" class="list-group-item">Upload Document</a>
          <a href="/user/inboxDocs" class="list-group-item">Inbox Docs</a>
        {{/if_eq}}

        {{#if_eq user.userRoleId 3}}
          <a href="/user/myDocs" class="list-group-item"> My documents</a>
          <a href="/user/createDocsView" class="list-group-item">Upload Document</a>
          <a href="/user/inboxDocs" class="list-group-item">Inbox Docs</a>
        {{/if_eq}}


      </div>
    </div>
    <div class="col-lg-9">
      <div class="card">
        <div class="card-body">
          <h4>Archive</h4>
          <form id="signup" name="search" method="post" action="/user/search">
            <input name="search" type="text"/>
            <button type="submit">Search</button>
          </form>

          <div class="table-responsive">
            <table id="mytable" class="table table-bordred table-stipped">
              <thead>
              <th>File name</th>
              <th>Description</th>
              <th>Document Type</th>
              <th>Download link</th>
              <th>Author</th>
              <th></th>
              <thead>
              <tbody>
              <tr>
              {{#each docList}}
                  <td>{{name}}</td>
                  <td>{{description}}</td>
                {{#each ../docTypes}}
                  {{#if_eq ../docTypeId id}}
                      <td>{{name}}</td>
                  {{/if_eq}}
                {{/each}}
                  <td><a href="/user/downloadDoc/{{id}}">Download</a></td>

                {{#each ../userList}}
                  {{#if_eq ../userId id }}
                      <td>{{username}}</td>
                  {{/if_eq}}
                {{/each}}
                </tr>
              {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
