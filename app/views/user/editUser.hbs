
<div class="container">

  <div class="row">

    <div class="col-lg-3">
      <div class="list-group">
        <a href="/" class="list-group-item"> Home</a>



      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-3">
          <div class="card">
            <div class="card-body">
        <h1><span class="fa fa-sign-in"></span> Edit Profile</h1>
        {{#if message.length  }}
            <div class="alert alert-danger">{{ message }}</div>
        {{/if }}

        <form id="signup" name="signup" method="post" action="/user/editUser/{{user.id}}">
            <div class="form-group">
                <label for="editFirstname">Name</label>
                <input name="name" type="text" class="form-control" value="{{user.name}}" autofocus="true"/>
            </div>
            <div class="form-group">
                <label for="editLastname">Surname</label>
                <input name="surname" type="text" class="form-control" value="{{user.surname}}"/>
            </div>
            <div class="form-group">
                  <label for="editUsername">Username</label>
                  <input  class="form-control" name="username" type="text" value="{{user.username}}"/>
            </div>
            <button class="btn btn-warning btn-lg" type="submit" >Edit</button>
        </form>
    </div>
</div>
</div>
</div>
</div>