<div class="container">

  <div class="row  d-flex justify-content-center">
      <div class="col-sm-8">
          <div class="well card-heading ">
              <a href="/signIn" class="btn btn-info btn-sm">Авторизоваться</a>
          </div>
      </div>
      <div class="col-sm-8">
          <div class="card card-body">

              <h1><span class="fa fa-sign-in"></span>Сброс пароля</h1>

              <form  method="post" action="/api/reset-password">

                  <div class="form-group">
                      <label>логин</label>
                      <input class="form-control" name="userName" type="text"/>
                  </div>

                  <div class="form-group">
                    <label >номер телефона</label>
                    <input class="form-control" name="phone" type="text"/>
                  </div>
                  <p style="color: red;">
                    {{data_error}}
                  </p>
                  <p style="color: green;">
                    {{data}}
                  </p>

                  <input class="btn btn-warning btn-lg" type="submit" value="Create" />
              </form>
          </div> <!-- .well -->
        </div> <!-- .col-sm- -->

  </div>
</div>
